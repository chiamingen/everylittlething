<h1>Editing <%= @image_category.name %></h1>

<div id="test">None</div>

<div id="menubar">
	<table width="100%">
		<tr>
			<td width="50%">
				<%= link_to "Back to #{@image_category.name}", image_category_path(@image_category) %> | 
				<%= link_to_function 'Move To', "show_menu(event, 'move_to')" %>
				<ul id="move_to" class="menu" style="display: none">
					<% @image_categories.each do | cat | %>
						<li><%= link_to_function cat.name, "move_images('#{move_to_image_category_path(cat)}')" %></li>
					<% end %>
				</ul> |
				<%= link_to_function 'Delete', "delete_selected('#{destroy_all_images_path}')" %>
			</td>
			<td width="50%" align="right"><%= page_entries_info @images %></td>
		</tr>
	</table>
</div>

<%= render :partial => 'images' %>
